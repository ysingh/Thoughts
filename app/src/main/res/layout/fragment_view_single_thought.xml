<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.ua.cs.thoughts.fragments.ViewSingleThoughtFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tvThought"
        android:padding="2sp"
        android:background="#5000"
        android:gravity="center"
        android:layout_above="@+id/bPolarity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Analyze Polarity"
        android:id="@+id/bPolarity"
        android:layout_above="@+id/bEmotion"
        android:layout_alignLeft="@+id/bEmotion"
        android:layout_alignStart="@+id/bEmotion" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Analize Emotion"
        android:id="@+id/bEmotion"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
